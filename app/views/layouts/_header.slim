  /! //==mega menu start==//
  #main-menu.wa-main-menu
    /! Menu
    .wathemes-menu.relative
      /! navbar
      .navbar.navbar-default.navbar-bg-dark role="navigation"
        .container
          .row
            .col-md-8.col-sm-8.col-xs-12
              .navbar-header.pad-top15.pad-bottom15
                /! Button For Responsive toggle
                button.navbar-toggle data-target=".navbar-collapse" data-toggle="collapse" type="button"
                  span.sr-only Toggle navigation
                  span.icon-bar
                  span.icon-bar
                  span.icon-bar
                .icons-section.boxx.pull-right
                  ul
                    li.hidden-sm.hidden-md.hidden-lg.hover-mini-cart
                      - if current_user
                        = render "layouts/cart_info"
                a.navbar-brand.hidden-sm.hidden-md.hidden-lg.logo-second href="index.html"
                  img.site_logo alt=("Site Logo") src=asset_path("menu-logo.png")
              /! Navbar Collapse
              .navbar-collapse.collapse
                /! nav
                ul.nav.navbar-nav
                  li
                    a href="/" = t(".home")
                  li
                    = link_to t(".products"), warehouse_products_path
                  li
                    = link_to 'FAQs', page_path('faq')
                  li
                    = link_to 'Terms and Conditions', page_path('terms_and_conditions')
                  li
                    = link_to 'Contact', page_path('contact')
              /! navbar-collapse
            .col-md-4.col-sm-4.col-xs-9.hidden-xs
              .icons-section.pad-top20.pull-right
                ul
                  li.search-box1.hidden-xs
                    .search-box-top-bar
                      input.search_terms name="search" placeholder="Search" type="text" /
                      button.button-style type="submit" value=""
                        i.fa.fa-search aria-hidden="true"
                  li.hidden-xs.login-box-man
                    a.mini-cart-icon href="#"
                      i.fa.fa-user aria-hidden="true"&gt;
                    .login-section
                      ul.pad-10
                        - if current_user
                          li
                            a href="" = t(".my_account")
                          li
                            = link_to t(".logout"), destroy_user_session_path, method: :delete
                        - else
                          li
                            = link_to t(".sign_in"), new_user_session_path
                  li.hidden-xs.hover-mini-cart
                    - if current_user
                      = render "layouts/cart_info"
                      = flag_icon current_user.locale
            /! col-md-12
          /! row
        /! container
      /! navbar
    /! Menu
  /! //==mega menu end==//
